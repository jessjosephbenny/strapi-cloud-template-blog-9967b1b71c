{
  "kind": "collectionType",
  "collectionName": "media_items",
  "info": {
    "singularName": "media-item",
    "pluralName": "media-items",
    "displayName": "MediaItem"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "type": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "enum": [
        "audio",
        "video"
      ]
    },
    "title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "file": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "transcript": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::transcript.transcript"
    },
    "duration": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "saint": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::saint.saint"
    }
  }
}
